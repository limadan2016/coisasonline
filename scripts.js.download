function setPhoneInputs(onFill) {
    $('.phone-input').each(function () {
        var telInput = $(this);
        var value = telInput.data('value') || $(telInput.data('value-input')).val() || '';
        var valueInput = telInput.data('value-input') || '';

        telInput.intlTelInput({
            initialCountry: 'BR',
            preferredCountries: ['BR', 'VN', 'PH', 'AR', 'US', 'CA'],
            customPlaceholder: function(selectedCountryPlaceholder) {
                selectedCountryPlaceholder = selectedCountryPlaceholder.replace(/\d/g, "0");
                return selectedCountryPlaceholder;
            }
        });

        telInput.blur(function() {
            var self = $(this);
            var phone = self.intlTelInput('getNumber');
            var isValid = self.intlTelInput('isValidNumber');

            self.data('value', phone);

            if (isValid === true) {
                self.val(telInput.intlTelInput('getNumber', intlTelInputUtils.numberFormat.NATIONAL));

                if (onFill) {
                    onFill(true);
                }
            } else {
                onFill(false);
            }

            if (valueInput.length > 0) {
                $(valueInput).val(telInput.intlTelInput('getNumber'));
            }
        });

        if (value.length > 0) {
            telInput.intlTelInput('setNumber', value);
        }
    });
}