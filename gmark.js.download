var GMark = function(logoHex, element) {
  this.output = "";
  for(i = 0; i < 64; i++) {
    var color = this.convert_color(logoHex[i]);
    this.output += this.create_rect((Math.floor(i % 8) * 13) + 1, (Math.floor(i / 8) * 13) + 1, color);
  }
  this.draw_logo(element);
};
GMark.prototype.draw_logo = function(element) {
  document.getElementById(element).innerHTML = 
    "<svg width=\"106\" height=\"106\" xmlns=\"http://www.w3.org/2000/svg\" xmlns:svg=\"http://www.w3.org/2000/svg\">" +
    "<rect height=\"106\" width=\"106\" x=\"0\" y=\"0\" stroke-width=\"1\" stroke=\"#999999\" fill=\"#FFFFFF\" />" +
    this.output +
    "</svg>";
};
GMark.prototype.create_rect = function(x, y, color) {
  return "<rect height=\"13\" width=\"13\" x=\"" + x + "\" y=\"" + y + "\" stroke-width=\"0\" stroke=\"#000000\" fill=\"" + color + "\" />";
};
GMark.prototype.convert_color = function(letter) {
  switch(letter) {
    case("0"): return "#FFFFFF";
    case("1"): return "#000000";
    case("2"): return "#8c8a8d";
    case("3"): return "#ffffff";
    case("4"): return "#fe0000";
    case("5"): return "#ff8a00";
    case("6"): return "#ffff00";
    case("7"): return "#8cff01";
    case("8"): return "#00ff00";
    case("9"): return "#01ff8d";
    case("a"): return "#00ffff";
    case("b"): return "#008aff";
    case("c"): return "#0000fe";
    case("d"): return "#8c00ff";
    case("e"): return "#ff00fe";
    case("f"): return "#ff008c";
    default: return "#000000"; 
  }
};